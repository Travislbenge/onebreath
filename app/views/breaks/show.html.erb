<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="title-box">
        <h1>Enjoy your break!</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="sub-title-box">
        <h2>something here</h2>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4 middle-content">
      <%= @break.duration %>
      <%= javascript_pack_tag 'easytimer' %>
      <br>
      <div id="timer"  data-sessionid="<%= @break.timer_session.id %>" data-break="<%= @break.id %>" data-breaklimit="<%= @break.length %>"><%= @break.id %>
      </div>
      <%= javascript_pack_tag 'easytimer' %>
      <%= @break.length %>
    </div>
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="action-buttons-box">
          <%= link_to "Resume", break_path(@break), method: :patch, remote: true , :class=> "btn btn-primary rexit" %>
        </div>
        <div class="action-buttons-box">
          <%= link_to "Exit", presets_path,  :class=> "btn btn-primary rexit" %>
        </div>
    </div>

     <div class="row">
    <div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4 middle-content">
    <h1>Some recommended tracks</h1>
     <iframe src="https://open.spotify.com/embed?uri=<%= @cancion %>" width="100%" height="80" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
</div>




