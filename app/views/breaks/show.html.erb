<style>
.body {
  height: 100vh;
}
</style><div class="container text-center">
  <div class="row">
     <div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4 middle-content">
      <div class="title-box">
        <h1>Enjoy your break!</h1>
      </div>
    </div>
  </div>
    <div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4 middle-content">
      <div class="sub-title-box">
        <h2>One breath at a time</h2>
      </div>
    </div>
  <div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4 middle-content">
    <div class="timerfont">
<!--       <%= @break.duration %> -->
      <div id="timer" data-sessionid="<%= @break.timer_session.id %>" data-break="<%= @break.id %>" data-breaklimit="<%= @break.length %>">00:00:00
      </div>
    </div>
    <br>
    <br>
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="action-buttons-box">
          <%= link_to "Resume", break_path(@break), method: :patch, remote: true , :class=> "btn btn-primary rexit" %>
      </div>
      <div class="action-buttons-box">
          <%= link_to "Exit", presets_path,  :class=> "btn btn-primary rexit" %>
      </div>
    </div>
    </div>
    <div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4 middle-content">
      <div class="action-buttons-box">
        <h5>Try our meditation playlist!</h5>
        <iframe src="https://open.spotify.com/embed?uri=<%= @cancion %>" width=80" height="75" frameborder="0" allowtransparency="true"> </iframe>
      </div>
  </div>
</div>
</div>

<%= javascript_pack_tag 'easytimer' %>
