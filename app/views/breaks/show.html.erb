<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="title-box">
        <h1>Enjoy your break!</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="sub-title-box">
        <h2>something here</h2>
      </div>

    </div>
  </div>
  <div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4 middle-content">

   <div class="col-xs-12 col-md-6 col-md-offset-3 action-buttons-box">

    <%= link_to "Start", break_path(@break), method: :patch, remote: true , :class=> "btn btn-primary rexit" %>
  </div>

  <div class="col-xs-12 col-md-6 col-md-offset-3 action-buttons-box">

    <%= link_to "Exit", presets_path,  :class=> "btn btn-primary rexit" %>
  </div>
</div>
<div class="col-xs-12 col-md-6 col-md-offset-3">
  <div class="action-buttons-box">
    <%= @break.duration %>
    <%= javascript_pack_tag 'easytimer' %>
    <br>
    <div id="timer" data-limit="<%= @break.timer_session.preset.string_duration %>" data-sessionid="<%= @break.timer_session.id %>" data-break="<%= @break.id %>">
      00:00:00
    </div>
    <%= javascript_pack_tag 'easytimer' %>
    <%= @break.length %>
    <h1>Lisen some music recomended for your break activity</h1>
  </div>
  <iframe src="https://open.spotify.com/embed?uri=<%= @cancion %>" width="100%" height="80" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
</div>
</div>
</div>





