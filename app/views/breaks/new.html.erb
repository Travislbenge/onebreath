<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="title-box">
        <h1>One Breath</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="sub-title-box">
        <h3>What are you doing during your break?</h3>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <% @activity.each do |act| %>
    <div class="action-buttons-box">
      <%= link_to act.name, breaks_path , :class=> "timer_session_id btn btn-primary resume" %>
    </div>
    <% end %>
  </div>
  </div>
</div>





