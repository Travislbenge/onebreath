<h3>What are you doing during your break?</h3>

<%= simple_form_for [@timersession, @break] do |f| %>
  <%= f.association :activity %>
  <%= f.button :submit, name: "timer_session_id", value: params[:timer_session] %>
<% end %>


<form action="">
  <% @activity.each_with_index do |act, index| %>
  <input type="checkbox" checked="checked" value="<%= index %>" name="<%= index %>" id="<%= index %>">
  <label for="<%= index %>"><%= act.name %></label><br>
<% end %>
</form>


<style>
  form {
  display: flex;
  justify-content: center;
  width: 100%;
  padding-top: 20px;
}

input[type="checkbox"] {
  display: none;
}

label {
  padding: 12px 18px 10px;
  text-align: center;
  border-radius: 4px;
  border: solid 1px silver;
  background-color: silver;
  opacity: 0.6;
  margin: 4px;
  color: grey;
  font-family: arial;

}

input:checked + label {
  background-color: turquoise;
  opacity: 1;
  box-shadow: inset 0 1px 4px 0 rgba(0,0,0,0.3);
  color: white;
 }


</style>
