<div class="middle-content">

<%= simple_form_for [@preset, @activity] , defaults: { input_html: { class: 'form-control' } } do |f| %>
  <%= f.input :name %>
  <%= f.submit "Add Activity", class: "btn obbtn sign-in-fb" %>
<% end %>

</div>

<p>Your break activities</p>

<div class="col-xs-8 col-xs-offset-2">
  <ul class="list-group" style="padding:0; margin-bottom:50px;">
<% @preset.activities.each do |activity| %>
  <li class="list-group-item list-group-item-primary breakies" data-activity-id="<%= activity.id %>">
   <%= activity.name %>
  <br>
   <%= link_to "delete", activity,
      method: :delete, remote: true %>
<% end %>
</ul>
</div>
<div class="action-buttons-box">
  <%= link_to "Save Breaks", presets_path, class: "btn obbtn resume" %>
</div>
</div>

