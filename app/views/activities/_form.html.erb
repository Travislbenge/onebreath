<div class="form-container"></div>
<div class="form-stuff">
<h2>Add an activity to the list</h2>

<%= simple_form_for [@preset, @activity] , defaults: { input_html: { class: 'form-control form-inline' } } do |f| %>
  <%= f.input :name %>
  <%= f.submit "add another activity" %>
<% end %>

<ul>
<% @preset.activities.each do |activity| %>
  <li data-activity-id="<%= activity.id %>"><%= activity.name %> - <%= link_to "delete", activity,
      method: :delete, remote: true  %>
<% end %>
</ul>


<%= link_to "Save your preset", presets_path %>
</div>
</div>
