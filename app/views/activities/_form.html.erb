<%= simple_form_for [@preset, @activity] , defaults: { input_html: { class: 'form-control' } } do |f| %>
  <%= f.input :name %>
  <%= f.submit "Add Activity", class: "btn btn-primary" %>
<% end %>

<ul>
<% @preset.activities.each do |activity| %>
  <li data-activity-id="<%= activity.id %>"><%= activity.name %> - <%= link_to "delete", activity,
      method: :delete, remote: true %>
<% end %>
</ul>


<%= link_to "Save your preset", presets_path, class: "btn btn-primary" %>
