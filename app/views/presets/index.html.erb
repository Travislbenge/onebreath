<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="title-box">
        <h1>Welcome User</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="sub-title-box">
        <h2>Pick your flow</h2>
      </div>
    </div>
  </div>

 <div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4 middle-content">
    <div class="middle-content">
       <div class="presets-box">
         <% @presets.each do |preset| %>
         <%= link_to preset.name, preset_timer_sessions_path(preset), method: :post, :class=> "btn btn-primary flow-selected"%>
      </div>
      <div class="presets-box">
         <%= link_to 'delete', preset , method: :delete,
         data: { confirm: "Are you sure?" } %>
         || <%= link_to 'edit', edit_preset_path(preset)%>
         <% end %>
      </div>

      <div class="presets-box">
          <%= link_to "Add new", new_preset_path, :class=> "btn btn-primary flow-unselected" %>
      </div>
     </div>
    </div>
  </div>

