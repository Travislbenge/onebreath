<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="title-box">
        <h1 class="h1title">Pick your flow</h1>
      </div>
    </div>
  </div>
    <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
      <div class="sub-title-box">
        <p class="pbold">

          Create your new timer preset flow or select one.

        </p>
      </div>
    </div>
  <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4">
    <div class="middle-content">
      <div class="presets-box presets-box-button">
          <div class="flex preset-box-content">
            <%= link_to preset_timer_sessions_path(@pomodoro), method: :post, class: "preset-link" do %>
              <p class="pbold"><%= @pomodoro.name %></p>
            <% end %>
            <div>
             <%= image_tag "tomato.svg", class: "white-svg"%>
            </div>
          </div>
      </div>
      <% @presets.each do |preset| %>
      <div class="presets-box presets-box-button">
          <div class="flex preset-box-content">
            <%= link_to preset_timer_sessions_path(preset), method: :post, class: "preset-link" do %>
              <p class="pbold2"><%= preset.name %></p>
            <% end %>
            <div class="button-presets-action">
              <%= link_to edit_preset_path(preset) do %>
                <i class="far fa-edit whiteicon"></i>
              <% end %>
              <%= link_to preset , method: :delete do %>
                <i class="fa fa-trash whiteicon" aria-hidden="true"></i>
              <% end %>
            </div>
          </div>
      </div>
      <% end %>
      <div class="presets-box presets-box-button">
        <div class="flex preset-box-content">
          <%= link_to new_preset_path, :class=> "" do %>
            <p class="pbold2">Create a new flow</p>
          <% end %>
          <div>
      </div>
    </div>
  </div>
</div>
<div class="bottom-blank">
</div>
