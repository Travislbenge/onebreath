<div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4">
	<div class="middle-content">
  	<%= simple_form_for [@preset], defaults: { input_html: { class: 'form-control' } } do |f| %>
    	<%= f.input :name, label:"Name your Flow"%>
		<%= f.input :working_day, label: "How long do you want to work today?"%>
		<%= f.input :focus_timer, label: "How long do you want to focus?" %>
		<%= f.input :break_duration, label: "How long should your short breaks be?"%>
  </div>

      <div class="action-buttons-box">
        <%= f.submit "Start Timer", :class=> "btn btn-primary sign-in" %>
      </div>
      <div class="action-buttons-box">
        <%= f.submit "Define Breaks", :class=> "btn btn-primary sign-in-fb" %>
      </div>
    </div>
    <% end %>
  </div>





