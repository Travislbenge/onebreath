<%= simple_form_for [@preset], defaults: { input_html: { class: 'form-control form-inline' } } do |f| %>
<%= f.input :name%>
<%= f.input :working_day, as: :time, :minute_step => 15 %>
<%= f.input :focus_timer, as: :time, :minute_step => 15 %>
<%= f.input :break_duration, as: :time, :minute_step => 15 %>
  <%= f.submit "Done" %>
  <%= f.submit "Or define breaks" %>
<% end %>



