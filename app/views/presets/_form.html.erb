<div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4 middle-content">
	<div class="middle-content">
  	<%= simple_form_for [@preset], defaults: { input_html: { class: 'form-control' } } do |f| %>
    	<%= f.input :name%>
		<%= f.input :working_day%>
		<%= f.input :focus_timer %>
		<%= f.input :break_duration%>

    <div class="col-xs-12 col-md-6 	col-md-offset-3 action-buttons-box">
      <div class="action-buttons-box">
        <%= f.submit "Start Timer", :class=> "btn btn-primary sign-in" %>
      </div>
      <div class="action-buttons-box">
        <%= f.submit "Define Breaks", :class=> "btn btn-primary sign-in-fb" %>
      </div>
    </div>
    <% end %>
    </div>
  </div>





