<div class="container text-center">


    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="title-box">
        <h1>One Breath</h1>
        </div>
      </div>
    </div>

  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="sub-title-box">
        <h2>Log in with email or facebook</h2>
      </div>

    </div>
  </div>

  <div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4 middle-content">
    <div class="middle-content">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

    </div>
  </div>

    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="action-buttons-box">
           <div class="form-actions">
            <%= f.button :submit, "Sign in", :class=> "btn obbtn sign-in" %>
          </div>
      </div>
            <div class="action-buttons-box">
        <%= link_to "Sign in with FB", user_facebook_omniauth_authorize_path, :class=> "btn obbtn sign-in-fb" %>
      </div>
          <%= render "devise/shared/links" %>
          <% end %>
      </div>
    </div>


  </div>







