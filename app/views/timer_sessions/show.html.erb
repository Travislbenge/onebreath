      window.location.href ="/breaks/new?timer_session=60"
    </script> -->
    <br>
 <% end %>
<% end %>
<div id="timer" data-limit="<%= @timer_session.preset.string_duration %>" data-sessionid="<%= @timer_session.id %>">
