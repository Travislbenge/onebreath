
<h1>Timer in Progress...</h1>

<%= link_to "Start", start_timer_session_path(@timer_session), method: :patch, remote: true  %>
<br>

<%= link_to "End of time", new_timer_session_break_path(@timer_session)  %>
<br>
<%= link_to "Exit", presets_path  %>
<br>
<%= link_to "End", end_timer_session_path(@timer_session), method: :patch  %>
<br>
<%if @timer_session.starts_at != nil %>
  <%= (Time.now - @timer_session.starts_at).round(2) %>
  <%= "seconds" %>
<% end %>
<br>
<%if @timer_session.starts_at != nil %>
  <%if Time.now - @timer_session.starts_at >= @timer_session.preset.focus_timer %>
    <%= "Break time!"%>
    <br>
  <% end %>
<% end %>
<%if @timer_session.starts_at != nil %>
  <%if Time.now - @timer_session.starts_at >= @timer_session.preset.focus_timer %>
