



<% working_time = @timer_session.preset.working_day %>
<% breaks_time = @timer_session.breaks.count.to_i * @timer_session.breaks.first.length.to_i%>
<% focus_time = @timer_session.preset.focus_timer.to_i * @timer_session.breaks.count.to_i %>
<%remaining_time = working_time - focus_time - breaks_time %>

<%= "Time allocated for today = " %>
<%= working_time %>
<%= "seconds" %>
<br>

<%= "Time spent on breaks = " %>
<%= breaks_time%>
<%= "seconds" %>
<br>

<%= "Time spent focusing = " %>
<%= focus_time%>
<%= "seconds" %>
<br>

<%= "Time remaning = " %>
<%= remaining_time %>
<%= "seconds" %>
<br>

<h4>Activities completed during breaks</h4>

<%= javascript_include_tag "https://www.gstatic.com/charts/loader.js", "chartkick" %>
<div class="stats">
   <%= bar_chart({"work day" => working_time, "remaining time" => remaining_time}, ytitle: "Time (minutes)", xtitle: "Activity")  %>
</div>
<br>
<div class="stats">
  <%= column_chart(@stats, ytitle: "Time (minutes)", xtitle: "Activity")  %>
</div>



