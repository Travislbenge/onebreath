  <% total_focus = 0%>
  <% total_break = 0 %>
  <% @timer_sessions.each do |timer_session| %>

    <% total_focus += timer_session.preset.focus_timer * timer_session.breaks.length%>
    <% total_break += timer_session.preset.break_duration * timer_session.breaks.length%>
  <% end %>

<div class="lifetime-container">
  <div class="lifetime-title">
    <h1>Lifetime Stats</h1>
  </div>
  <div class="lifetime-stats">
    <%= "Total seconds spent = " %>
    <%= total_focus + total_break %>
    <br>
    <%= "Total seconds spent focusing = " %>
    <%= total_focus %>
    <br>
    <% @stats.each do |key, value| %>
      <%= "Total seconds spent on #{key} = #{value}" %>
      <br>
    <% end %>
  </div>
  <div class="lifetime-exit">
    <% if @timer_sessions.last != nil %>
      <%= link_to "Stats for last timer session", stats_path(@timer_sessions.last) %>
    <% end %>
  </div>


  <div class="action-buttons-box">
    <%= link_to "Exit", presets_path, :class=> "btn obbtn rexit" %>
  </div>
</div>
